$("alert alert-info").html("")
<% if @pin.errors.any? %>
  <% @pin.errors.full_messages.each do |message| %>
    $("alert alert-info").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".product-div").html("<%= escape_javascript(render 'index') %>")
  $("#product-modal").modal("hide")
<% end %>