$("ul.errors").html("")
<% if @pin.errors.any? %>
  <% @pin.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#product-modal").html("<%= escape_javascript(render 'index') %>")
  $("#product-modal").modal("hide")
<% end %>