.vertcontainer
	.vhelper
		.vcontent
			#edit_page.col-md-8.col-md-offset-2
				.panel.panel-default
					.panel-heading
						%h2 Edit Art Feature
						.close1
							.close2
								= link_to "", "#", class: "glyphicon glyphicon-remove", data: {dismiss: "modal"}
							.close3
								= link_to "Cancel", "#", data: {dismiss: "modal"}
					.panel-body
						.current_image
							%strong.center Current Image
							= image_tag @pin.image.url(:medium)
						= render 'form'