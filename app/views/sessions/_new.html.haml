.vertcontainer
  .vhelper
    .vcontent
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            %h2 Sign In
            .close1
              .close2
                = link_to "", "#", class: "glyphicon glyphicon-remove", data: {dismiss: "modal"}
              .close3
                = link_to "Cancel", "#", data: {dismiss: "modal"}
          .panel-body
            = form_for(:session, url: login_path) do |f|
              .form-group
                = f.label :email
                %br/
                = f.email_field :email, autofocus: true, class: "form-control"
              .form-group
                = f.label :password
                = link_to "(forgot password)", new_password_reset_path, remote: true
                %br/
                = f.password_field :password, autocomplete: "off", class: "form-control"
                .form-group
                  = f.check_box :remember_me
                  = f.label :remember_me
              .form-group
                = f.submit "Log in", class: "btn btn-primary"  
                %br/
              %p New user? #{link_to "Sign up now!", signup_path, remote: true}

